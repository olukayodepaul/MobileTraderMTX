<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_modules"
    android:background="@color/white">

    <ImageView
        android:id="@+id/message_icons"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_message" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/message_icons"
        android:fontFamily="@font/roboto_regular"
        android:lines="1"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/icons_images"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_baseline_done_24_1" />

    <ImageView
        android:id="@+id/custIcons"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_baseline_done_24_2" />

    <ImageView
        android:id="@+id/calendarImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_icons"
        android:src="@drawable/ic_calenda" />

    <TextView
        android:id="@+id/calendarDate"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/calendarImage"
        android:fontFamily="@font/roboto_bold"
        android:text="0000-00-00"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/timeImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/calendarDate"
        android:src="@drawable/ic_time" />


    <TextView
        android:id="@+id/timeTime"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/timeImage"
        android:fontFamily="@font/roboto_bold"
        android:text="00:00:00"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/timeTime"
        android:src="@drawable/ic_delete" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/deleteImage"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="#A3A3A3" />

</RelativeLayout>
